<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/twine_600"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Nido Gourmet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_aves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aves"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E5A06E"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/txt_aves"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 13/05/2025"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aves registradas en compuerta 1: 3\nAves registradas en compuerta 2: 7"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de aves: 10"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de aves"
            android:background="#D7D714"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:elevation="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patrón de alimentación:\nHorario de 7 a.m a 12 p.m"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interacción entre aves:\nActivación de las demás compuertas al mismo tiempo: 5"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días a la semana con mayor avistamiento:\nLunes, Miércoles, Viernes"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días a la semana con menor avistamiento:\nLunes, Miércoles, Viernes"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estación del año con mayor avistamiento:\nPrimavera, Verano"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estación del año con menor avistamiento:\nOtoño, Invierno"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
